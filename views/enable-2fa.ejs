<!DOCTYPE html>
<html>
<head>
    <title>Enable Two Factor Authentication</title>
    <style>
        body {
            position: relative;
            text-align: center; /* Center text within the body */
            background: url('Home.jpg') no-repeat center center fixed;
            background-size: cover; /* Ensure the background image covers the whole screen */
            overflow: hidden; /* Remove the scroll bar */
        }
        .container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Center the content vertically */
        }

        h1 {
            color: #000000; /* Set text color to white for better visibility */
        }

        p {
            color: #000000;
        }

        img {
            max-width: 100%;
        }

        form {
            margin-top: 20px;
        }

        input[type="text"] {
            width: 100%;
            padding: 10px;
        }

        button[type="submit"] {
            background-color: #007BFF;
            color: #fff;
            padding: 7px 15px;
            border: none;
            cursor: pointer;
        }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }

        .navbar {
            position: fixed; /* Fixed position at the top */
            top: 0;
            left: 0;
            right: 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: rgba(0, 0, 0, 0.5);
            padding: 10px 20px;
            z-index: 1000; /* Ensure the navbar is on top */
        }
        .navbar a {
            color: #fff;
            text-decoration: none;
            margin-right: 15px;
            margin-left: 10px;
        }

        .center-button {
            background-color: #007BFF;
            color: #fff;
            padding: 7px 14px; /* Adjust padding for a smaller button */
            text-decoration: none;
        }

        .center-button:hover {
            background-color: #0056b3;
        }
        .user-icon {
            position: relative;
            font-size: 24px; /* Increase the font size for a larger emoji */
        }
        .user-icon a {
            color: #ffffff; /* Change the color to white */
            margin-right: 5px;
        }
        .user-icon:hover .dropdown-menu {
            display: block;
        }
        .dropdown-menu {
            display: none;
            position: absolute;
            top: 100%;
            right: 0;
            background-color: rgba(0, 0, 0, 0.5);
            padding: 10px;
        }
        .dropdown-menu a {
            color: #fff;
            text-decoration: none;
            display: block;
            margin: 5px 0;
        }
        .dropdown-menu a {
            font-size: 14px; /* Smaller font size */
        }
        .right-menu {
            display: flex;
            justify-content: flex-end;
            align-items: center;
        }
    </style>
</head>
<body>
    <div class="navbar">
        <div class="left-menu">
            <a href="home2">Home</a>
            <a href="About.html">About</a>
        </div>
        <div class="right-menu">
            <div class="user-icon">
                <a href="#">‚öôÔ∏è</a>
                <div class="dropdown-menu">
                    <a href="/profile">üë§ Profile</a>
                    <a href="/enable-2fa">üîí Enable 2FA</a>
                    <a href="/face-recognition.html">üëÅÔ∏è Face ID</a>
                    <a href="/home">üö™ Sign Out</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <h1>Set Up Two-Factor Authentication</h1>
        <p>Scan the QR code using your 2FA app:</p>
        <img src="<%= imageUrl %>" alt="QR Code">
        <p>Enter the one-time code generated by your 2FA app:</p>
        <form method="post" action="/enable-2fa">
            <input type="text" name="otp" placeholder="One-Time Code">
            <br>
            <input type="hidden" name="name" value="<%= name %>">
            <br><button type="submit">Submit</button>
        </form>
    </div>
    <script>
        // Function to validate the one-time code
        function validateOneTimeCode(enteredCode, expectedCode) {
            return enteredCode === expectedCode;
        }
    
        // Check if the 2FA form was successfully submitted
        const form = document.querySelector('form');
        form.addEventListener('submit', function (event) {
            event.preventDefault(); // Prevent the default form submission
            console.log('Form submitted'); // Debugging output
    
            // Retrieve the expectedCode value passed from the server-side
            const expectedCode = "<%= expectedCode %>";
    
            const otpInput = document.querySelector('input[name="otp"]');
            const isSubmissionSuccessful = validateOneTimeCode(otpInput.value, expectedCode);
    
            if (isSubmissionSuccessful) {
                console.log('Submission is successful'); // Debugging output
                redirectToHome2(); // Redirect to home2.html
            } else {
                // Handle the case where the submission was not successful (e.g., display an error message)
                console.log('Submission failed'); // Debugging output
                alert('Invalid one-time code. Please try again.');
            }
        });
    </script>    
    
</body>
</html>
